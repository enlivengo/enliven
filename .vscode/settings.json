{
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".go",
                "isAsync": false,
                "cmd": "killall debug"
            },
            {
                "match": ".go",
                "isAsync": false,
                "cmd": "cd ${workspaceRoot} && go get"
            },
            
            {
                "match": ".html",
                "isAsync": false,
                "cmd": "killall debug"
            },
            {
                "match": ".html",
                "isAsync": false,
                "cmd": "cd ${workspaceRoot} && rm -f ./apps/user/templates.go ./templates/templates.go"
            },
            {
                "match": ".html",
                "isAsync": false,
                "cmd": "cd ${workspaceRoot} && go generate ./..."
            },
            
            {
                "match": ".tmpl",
                "isAsync": false,
                "cmd": "killall debug"
            },
            {
                "match": ".tmpl",
                "isAsync": false,
                "cmd": "cd ${workspaceRoot} && rm -f ./templates/templates.go ./apps/admin/templates.go ./apps/user/templates.go"
            },
            {
                "match": ".tmpl",
                "isAsync": false,
                "cmd": "cd ${workspaceRoot} && go generate ./..."
            },
            
            {
                "match": ".css",
                "isAsync": false,
                "cmd": "killall debug"
            },
            {
                "match": ".css",
                "isAsync": false,
                "cmd": "cd ${workspaceRoot} && rm -f ./apps/user/templates.go ./templates/templates.go"
            },
            {
                "match": ".css",
                "isAsync": false,
                "cmd": "cd ${workspaceRoot} && go generate ./..."
            },
        ]
    }
}
